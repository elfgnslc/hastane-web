@{
    Layout = "_Layout";
    ViewData["Title"] = "Kullanıcı Girişi";
}

<nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
        <a class="navbar-brand color3" href="#">
            <i class="fas fa-hospital fa-2x me-2"></i>
            Hastane Takip Sistemi
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link color4" href="@Url.Action("Index", "Home")">
                        <i class="fas fa-home fa-lg me-1"></i> Ana Sayfa
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link color4" href="@Url.Action("Appointment", "Home")">
                        <i class="fas fa-calendar-alt fa-lg me-1"></i> Randevu
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link color4" href="@Url.Action("About", "Home")">
                        <i class="fas fa-info-circle fa-lg me-1"></i> Hakkımızda
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link color4" href="@Url.Action("Contact", "Home")">
                        <i class="fas fa-envelope fa-lg me-1"></i> İletişim
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="login-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-card">
                    <div class="login-header">
                        <i class="fas fa-user-circle fa-5x mb-3 color5"></i>
                        <h3 class="color4">Kullanıcı Girişi</h3>
                        <div class="header-icons">
                            <i class="fas fa-heartbeat fa-2x mx-2 color4"></i>
                            <i class="fas fa-stethoscope fa-2x mx-2 color4"></i>
                            <i class="fas fa-ambulance fa-2x mx-2 color4"></i>
                        </div>
                    </div>
                    <div class="login-body">
                        <form method="post" action="@Url.Action("PatientLogin", "Home")">
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="email" name="email" required placeholder="name@example.com">
                                <label for="email" class="color2">
                                    <i class="fas fa-envelope-open-text fa-lg me-2"></i> E-posta
                                </label>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="password" class="form-control" id="password" name="password" required placeholder="Password">
                                <label for="password" class="color2">
                                    <i class="fas fa-key fa-lg me-2"></i> Şifre
                                </label>
                            </div>
                            <button type="submit" class="btn btn-login w-100">
                                <i class="fas fa-sign-in-alt fa-lg me-2"></i> Giriş Yap
                            </button>
                        </form>
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger mt-4">
                                <i class="fas fa-exclamation-triangle fa-lg me-2"></i>
                                @TempData["ErrorMessage"]
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .color1 {color: #140c09;}
    .color2 {color: #41382c;}
    .color3 {color: #7993ad;}
    .color4 {color: #e3ebef;}
    .color5 {color: #f9f9f9;}

