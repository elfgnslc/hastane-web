    }

    .navbar {
        background: rgba(249, 249, 249, 0.95);
        backdrop-filter: blur(10px);
        box-shadow: 0 2px 15px rgba(20, 12, 9, 0.1);
    }

    .nav-link {
        margin: 0 5px;
        padding: 8px 15px;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        background: rgba(65, 56, 44, 0.1);
        transform: translateY(-2px);
    }

    .login-container {
        padding: 50px 0;
    }

    .login-card {
        background: rgba(249, 249, 249, 0.95);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(20, 12, 9, 0.1);
        overflow: hidden;
        animation: cardFloat 3s ease-in-out infinite;
    }

    .login-header {
        background: linear-gradient(135deg, #41382c 0%, #140c09 100%);
        padding: 30px;
        text-align: center;
    }

    .header-icons {
        margin-top: 20px;
        animation: iconPulse 2s ease-in-out infinite;
    }

    .login-body {
        padding: 40px;
    }

    .form-control {
        border: 2px solid #e3ebef;
        border-radius: 10px;
        padding: 12px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #41382c;
        box-shadow: 0 0 0 0.2rem rgba(65, 56, 44, 0.25);
    }

    .btn-login {
        background: linear-gradient(135deg, #41382c 0%, #140c09 100%);
        color: #f9f9f9;
        border: none;
        border-radius: 10px;
        padding: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(20, 12, 9, 0.4);
    }

    @@keyframes cardFloat {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    @@keyframes iconPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }
</style>
